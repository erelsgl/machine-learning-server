<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="deploy" name="Project servertranslate - Deploy all code except logs">
	<property name="target" value="/media/qa-srv/D/Apps/translate" />

	<target name="deploy">
		  <copy overwrite="true" todir="${target}/machine-learning-server">
		    <fileset dir=".">
		    	  <include name="**"/>		    	
		    	  <exclude name="**/logs/**"/>		    	
		    	  <exclude name="**/RetrainedClassifier.json"/>		    	
		  	</fileset>
		  </copy>
		  <copy overwrite="true" todir="${target}/machine-learning">
		    <fileset dir="../machine-learning">
		    	  <include name="**"/>		    	
		    	  <exclude name="**/logs/**"/>		    	
		  	</fileset>
		  </copy>
	</target>
</project>
